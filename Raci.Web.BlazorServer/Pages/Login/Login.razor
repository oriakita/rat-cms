@using Raci.Web.BlazorServer.Shared.Layouts
@layout LoginLayout
@page "/"

<style>
    .login-container {
        margin-top: 25vh;
        background-color: white;
        border-radius: 5px;
    }

    .login-content {
        width: 320px;
        text-align: center;
        margin: 40px 50px;
    }
</style>

<div class="row justify-content-center">
    <div class="login-container">
        <div class="login-content">
            <h2>Chào mừng đến AMS</h2>
            <h5>AlanCoffee Managements System</h5>
            <br />
            <div class="form-group">
                <input type="text" 
                       class="form-control" 
                       id="inputUserName" 
                       placeholder="Tên đăng nhập" 
                       @bind-value="_userName" 
                       @onkeyup="@Enter"
                       required>
            </div>
            <div class="form-group">
                <input type="password" 
                       class="form-control" 
                       id="inputPassword" 
                       placeholder="Mật khẩu" 
                       @bind-value="_password" 
                       @onkeyup="@Enter"
                       required>
            </div>
            <button type="button" class="btn btn-primary" @onclick="HandleOnLoginButtonClickedAsync">Đăng nhập</button>
        </div>
    </div>
</div>
